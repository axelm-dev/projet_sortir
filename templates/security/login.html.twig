{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Bienvenue {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="text-center mb-4">
                <h1 class="h4 font-weight-normal">Veuillez entrer vos identifiants</h1>
            </div>

            <label for="inputEmail" class="fs-5">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword" class="fs-5 mt-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <label class="d-block mt-2 mb-4">
                <input type="checkbox" name="_remember_me" checked>
                Rester connecté.e
            </label>

            <div class="text-center">
                <button class="btn btn-lg btn-custom me-2" type="submit">
                    Se connecter
                </button>
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
