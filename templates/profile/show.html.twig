{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="title col-md-8 text-center mb-5">
                <h1>VOTRE PROFIL</h1>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="custom-card col-md-6 mb-5 d-flex flex-row">
                <div class="card-body">
                    <p class="card-text">Prénom : {{ user.profile.firstName }}</p>
                    <p class="card-text">Nom : {{ user.profile.lastName }}</p>
                    <p class="card-text">Email : {{ user.email }}</p>
                </div>
                <img class="img-fluid" src="{{ vich_uploader_asset(user.profile, 'imageFile') }}" alt="{{ user.profile.image }}" style="width: 50%; object-fit: cover;">
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <div class="row">
                <div class="col-4">
                    <a class="btn btn-custom" href="{{ path('app_profile', {'id': user.id}) }}">Modifier</a>
                </div>
                {% if meetingId %}
                    <div class="col-8">
                        <a class="btn btn-custom" href="{{ path('app_meeting_show', {'id': meetingId}) }}">Retour à la sortie</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    Profil de {{ user.login }}
{% endblock %}

