{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>
    <div class="meeting-row">
{#        <div class="col-8">#}
            <table class="table">
                <tbody class="meeting-tBody">
                <tr>
                    <th class="meeting-transparent meeting-row-title">Nom de la sortie</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.name }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Organisateur</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.organizer.login }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Campus</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.campus.name }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Lieu</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.place.name }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Ville</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.place.city.name }}</ td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Durée</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.duration }}h</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Date</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.date ? meeting.date|date('Y-m-d H:i') : '' }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Nombre de participants maximum</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.usersMax }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Participants inscrits</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.nbUser }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Sortie</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.state.value }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Information</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.textNote }}</td>
                </tr>
                <tr>
                    <th class="meeting-transparent meeting-row-title">Date limite d'inscription</th>
                    <td class="meeting-transparent meeting-row-value">{{ meeting.limitDate ? meeting.limitDate|date('Y-m-d') : '' }}</td>
                </tr>
                {% if meeting.annulationReason != null %}
                    <tr>
                        <th class="meeting-transparent meeting-row-title">Raison de l'annulation</th>
                        <td class="meeting-transparent meeting-row-value">{{ meeting.annulationReason }}</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
