        <div class="col-4">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#participantsTable" aria-expanded="false" aria-controls="participantsTable">
                Toggle Participants
            </button>
            <div class="collapse" id="participantsTable">
                <table class="table">
                    <thead>
                    <tr>
                        <th class="meeting-transparent meeting-row-title">Participants</th>
                        <th class="meeting-transparent meeting-row-value">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in meeting.participants %}
                        <tr>
                            <td>{% if user.profile %}{% if user.profile.image %}<img width="50" height="50" src="{{ vich_uploader_asset(user.profile, 'imageFile') }}" alt="{{ user.profile.image }}"> {% endif %}{% endif %}{{ user.login }}</td>
                            <td>
                                <a href="{{ path('app_profile_user', {'id': user.id, 'sortie': meeting.id}) }}" class="btn btn-custom">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>



        <a href="{{ path('app_meeting_index') }}" class="btn btn-custom">Retour à la liste</a>
    {% if (meeting.state.value != state_canceled) and meeting.organizer.id == app.user.id %}
        <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}" class="btn btn-custom">Modifier la sortie</a>
        {% if "now"|date("Y-m-d") < meeting.limitDate|date('Y-m-d') %}
            <a href="{{ path('app_meeting_cancel', {'id': meeting.id}) }}" class="btn btn-custom">Annuler la sortie</a>
        {% endif %}
    {% endif %}
{% endblock %}
