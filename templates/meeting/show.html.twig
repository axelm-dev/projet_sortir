{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ meeting.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ meeting.date ? meeting.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UsersMax</th>
                <td>{{ meeting.usersMax }}</td>
            </tr>
            <tr>
                <th>TextNote</th>
                <td>{{ meeting.textNote }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ meeting.duration }}</td>
            </tr>
            <tr>
                <th>LimitDate</th>
                <td>{{ meeting.limitDate ? meeting.limitDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_meeting_index') }}">back to list</a>

    <a href="{{ path('app_meeting_edit', {'id': meeting.id}) }}">edit</a>

    {{ include('meeting/_delete_form.html.twig') }}
{% endblock %}
